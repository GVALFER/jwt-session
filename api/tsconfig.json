{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["ES2022"],
        "strict": true,
        "noImplicitOverride": true,
        "noUncheckedIndexedAccess": true,
        "noEmitOnError": true,
        "declaration": false,
        "sourceMap": false,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "prisma/generated/client/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
